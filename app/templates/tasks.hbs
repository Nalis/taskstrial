{{#link-to 'tasks.new'}}New task{{/link-to}}

-{-{#link-to 'task' this}}
<table class="table table-striped">
  <tbody>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  {{#each}}
    <tr>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        <span class="edit" {{action 'edit' this}}></span>
        <span class="remove" {{action 'delete' this}}></span>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
{{outlet}}
